{
  "name": "@soleone/pi-tasks",
  "version": "0.2.0",
  "description": "Task management extension for the pi coding agent",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soleone/pi-tasks.git"
  },
  "bugs": {
    "url": "https://github.com/soleone/pi-tasks/issues"
  },
  "homepage": "https://github.com/soleone/pi-tasks#readme",
  "pi": {
    "extensions": [
      "./src/index.ts"
    ]
  },
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src",
    "README.md",
    "CONTRIBUTING.md",
    "LICENSE"
  ],
  "keywords": [
    "pi",
    "tasks",
    "task-management",
    "tui"
  ],
  "scripts": {
    "release": "release-it",
    "release:dry": "release-it --dry-run"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.5",
    "release-it": "^19.2.4"
  }
}
